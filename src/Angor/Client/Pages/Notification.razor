@page "/notifications"

<h2 class="mb-3">Notifications</h2>

<div class="row">
    <div class="col-md-12">
        <!-- Add some padding around the notifications -->
        <div class="p-3">

            <!-- This is where the list of notifications would go -->
            <!-- Each notification is a row in a Bootstrap grid system -->
            <div class="row mb-3">
                <div class="col-12">
                    <!-- Here's an example of what a single notification might look like -->
                    <!-- This is just a div with a light gray background and some padding -->
                    <div class="p-3 bg-light">
                        <h4 class="mb-1">Notification Title</h4>
                        <p class="mb-1">Notification message...</p>
                        <p class="text-muted">Sent at: 12:00, June 22, 2023</p>
                    </div>
                </div>
            </div>

            <!-- Repeat the row for each notification -->
            <!-- In a real application, you'd likely use a loop here to generate rows for each notification -->
            <!-- I'll leave this as an exercise for you to implement -->
        </div>
    </div>
</div>